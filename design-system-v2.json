{
  "meta": {
    "name": "Autohaus Automotive Design System",
    "version": "1.0.0",
    "description": "Design system for Autohaus Collision Center Inc.",
    "extractedFrom": "Autohaus Collision Center Inc. branding",
    "brandColors": {
      "primary": "#22c55e",
      "background": "#000000",
      "text": "#ffffff"
    }
  },
  "colors": {
    "primary": {
      "50": "#f0fdf4",
      "100": "#dcfce7", 
      "200": "#bbf7d0",
      "300": "#86efac",
      "400": "#4ade80",
      "500": "#22c55e",
      "600": "#16a34a",
      "700": "#15803d",
      "800": "#166534",
      "900": "#14532d",
      "950": "#052e16"
    },
    "neutral": {
      "50": "#fafafa",
      "100": "#f5f5f5",
      "200": "#e5e5e5",
      "300": "#d4d4d4",
      "400": "#a3a3a3",
      "500": "#737373",
      "600": "#525252",
      "700": "#404040",
      "800": "#262626",
      "900": "#171717",
      "950": "#0a0a0a"
    },
    "semantic": {
      "background": "#fafafa",
      "surface": "#ffffff",
      "surface-secondary": "#f5f5f5",
      "surface-dark": "#000000",
      "text-primary": "#171717",
      "text-secondary": "#525252",
      "text-muted": "#737373",
      "text-on-dark": "#ffffff",
      "accent": "#16a34a",
      "brand-green": "#22c55e",
      "success": "#22c55e",
      "warning": "#f59e0b",
      "error": "#ef4444"
    }
  },
  "typography": {
    "fontFamilies": {
      "primary": {
        "name": "System Sans",
        "stack": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
        "weights": [400, 500, 600, 700, 800]
      },
      "brand": {
        "name": "Autohaus Display",
        "description": "Bold, condensed sans-serif for brand elements",
        "stack": "'Arial Black', 'Helvetica Black', 'Arial Bold', sans-serif",
        "weights": [700, 800, 900],
        "usage": "For brand text, headers, and emphasis elements"
      }
    },
    "scales": {
      "heading": {
        "h1": {
          "fontSize": "3.5rem",
          "lineHeight": "1.1",
          "fontWeight": 700,
          "letterSpacing": "-0.02em"
        },
        "h2": {
          "fontSize": "2.5rem",
          "lineHeight": "1.2",
          "fontWeight": 600,
          "letterSpacing": "-0.01em"
        },
        "h3": {
          "fontSize": "1.875rem",
          "lineHeight": "1.3",
          "fontWeight": 600,
          "letterSpacing": "0"
        },
        "h4": {
          "fontSize": "1.5rem",
          "lineHeight": "1.4",
          "fontWeight": 600,
          "letterSpacing": "0"
        },
        "h5": {
          "fontSize": "1.25rem",
          "lineHeight": "1.4",
          "fontWeight": 600,
          "letterSpacing": "0"
        },
        "h6": {
          "fontSize": "1.125rem",
          "lineHeight": "1.4",
          "fontWeight": 600,
          "letterSpacing": "0"
        }
      },
      "body": {
        "large": {
          "fontSize": "1.125rem",
          "lineHeight": "1.6",
          "fontWeight": 400
        },
        "medium": {
          "fontSize": "1rem",
          "lineHeight": "1.6",
          "fontWeight": 400
        },
        "small": {
          "fontSize": "0.875rem",
          "lineHeight": "1.5",
          "fontWeight": 400
        }
      }
    }
  },
  "spacing": {
    "scale": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem",
      "5xl": "8rem",
      "6xl": "12rem"
    },
    "sections": {
      "hero": {
        "paddingTop": "6rem",
        "paddingBottom": "6rem"
      },
      "content": {
        "paddingTop": "4rem",
        "paddingBottom": "4rem"
      },
      "compact": {
        "paddingTop": "3rem",
        "paddingBottom": "3rem"
      }
    }
  },
  "layout": {
    "container": {
      "maxWidth": "1200px",
      "padding": "1rem",
      "margin": "0 auto"
    },
    "grid": {
      "columns": 12,
      "gap": "1.5rem",
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px"
      }
    },
    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1200px"
    }
  },
  "components": {
    "button": {
      "primary": {
        "backgroundColor": "#16a34a",
        "color": "#ffffff",
        "padding": "0.75rem 2rem",
        "borderRadius": "9999px",
        "fontSize": "1rem",
        "fontWeight": 600,
        "border": "none",
        "textTransform": "none",
        "letterSpacing": "0",
        "transition": "all 0.2s ease",
        "hover": {
          "backgroundColor": "#15803d",
          "transform": "translateY(-1px)"
        }
      },
      "secondary": {
        "backgroundColor": "transparent",
        "color": "#16a34a",
        "padding": "0.75rem 2rem",
        "borderRadius": "9999px",
        "fontSize": "1rem",
        "fontWeight": 600,
        "border": "2px solid #16a34a",
        "textTransform": "none",
        "letterSpacing": "0",
        "transition": "all 0.2s ease",
        "hover": {
          "backgroundColor": "#16a34a",
          "color": "#ffffff"
        }
      }
    },
    "card": {
      "default": {
        "backgroundColor": "#ffffff",
        "borderRadius": "1rem",
        "padding": "2rem",
        "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
        "border": "1px solid #e5e5e5"
      },
      "hover": {
        "transform": "translateY(-2px)",
        "boxShadow": "0 10px 25px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)"
      }
    },
    "serviceCard": {
      "backgroundColor": "#ffffff",
      "borderRadius": "1rem",
      "padding": "2rem",
      "textAlign": "center",
      "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "border": "1px solid #e5e5e5",
      "transition": "all 0.3s ease"
    },
    "testimonial": {
      "backgroundColor": "#ffffff",
      "borderRadius": "1rem",
      "padding": "2rem",
      "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "border": "1px solid #e5e5e5",
      "position": "relative"
    },
    "navigation": {
      "backgroundColor": "#ffffff",
      "borderBottom": "1px solid #e5e5e5",
      "padding": "1rem 0",
      "position": "sticky",
      "top": "0",
      "zIndex": 50
    },
    "topBar": {
      "backgroundColor": "#16a34a",
      "color": "#ffffff",
      "padding": "0.5rem 0",
      "fontSize": "0.875rem",
      "textAlign": "center"
    },
    "brandHeader": {
      "backgroundColor": "#000000",
      "color": "#ffffff",
      "padding": "1rem 0",
      "textAlign": "center",
      "fontFamily": "'Arial Black', 'Helvetica Black', sans-serif",
      "fontWeight": 900,
      "letterSpacing": "0.1em",
      "textTransform": "uppercase"
    },
    "brandLogo": {
      "backgroundColor": "#000000",
      "color": "#ffffff",
      "accentColor": "#22c55e",
      "fontSize": {
        "main": "2.5rem",
        "tagline": "0.75rem"
      },
      "fontWeight": 900,
      "letterSpacing": "0.15em",
      "textTransform": "uppercase",
      "lineHeight": 0.9
    }
  },
  "effects": {
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
    },
    "borderRadius": {
      "sm": "0.25rem",
      "md": "0.5rem",
      "lg": "1rem",
      "xl": "1.5rem",
      "full": "9999px"
    },
    "transitions": {
      "fast": "all 0.15s ease",
      "medium": "all 0.2s ease",
      "slow": "all 0.3s ease"
    }
  },
  "patterns": {
    "hero": {
      "background": "linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%)",
      "textAlign": "center",
      "padding": "6rem 1rem"
    },
    "section": {
      "padding": "4rem 1rem",
      "backgroundColor": "#fafafa"
    },
    "imageGrid": {
      "display": "grid",
      "gridTemplateColumns": "repeat(auto-fit, minmax(280px, 1fr))",
      "gap": "1.5rem",
      "padding": "2rem 0"
    },
    "serviceGrid": {
      "display": "grid",
      "gridTemplateColumns": "repeat(auto-fit, minmax(250px, 1fr))",
      "gap": "2rem",
      "padding": "2rem 0"
    },
    "brandBanner": {
      "background": "#000000",
      "color": "#ffffff",
      "textAlign": "center",
      "padding": "2rem 1rem",
      "display": "flex",
      "flexDirection": "column",
      "alignItems": "center",
      "justifyContent": "center"
    },
    "automotiveSection": {
      "background": "linear-gradient(135deg, #000000 0%, #1a1a1a 100%)",
      "color": "#ffffff",
      "padding": "4rem 1rem",
      "position": "relative"
    }
  },
  "content": {
    "maxWidth": {
      "prose": "65ch",
      "container": "1200px",
      "narrow": "600px"
    },
    "aspectRatios": {
      "hero": "16/9",
      "card": "4/3",
      "square": "1/1"
    }
  }
}